# BitKeeper completion adapted from code by  Bart Trojanowski <bart@jukie.net>
#
# $Id: bitkeeper,v 1.2 2002/06/12 22:03:23 ianmacd Exp $
#

_bk() {
	local BKCMDS

	COMPREPLY=()
	cur=`_get_cword`

	BKCMDS="$( bk help topics | grep '^  bk' | cut -d ' ' -f 4 | \
		   xargs echo )"

	COMPREPLY=( $( compgen -W "$BKCMDS" -- "$cur" ) )
	_filedir

	return 0
}
complete -F _bk bk

